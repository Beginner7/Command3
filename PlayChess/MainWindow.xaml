<Window x:Class="PlayChess.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:PlayChess"
        Title="MainWindow" Height="447" Width="549" WindowStartupLocation="CenterScreen" ResizeMode="CanMinimize">
    <Grid>
        <Menu Name="MainMenu" Height="24" VerticalAlignment="Top" HorizontalAlignment="Left">
            <MenuItem Header="User">
                <MenuItem Header="Sign Up" Click="SignUpButton"/>
                <MenuItem Header="Sign In" Click="SignInButton"/>
                <MenuItem Header="Manage service" />         
            </MenuItem>
            <MenuItem Header="Game">
                <MenuItem Header="New game" />
                <MenuItem Header="List of games"  />                
            </MenuItem>
            <MenuItem Header="Help">
               
            </MenuItem>            
        </Menu>    
        <Viewbox HorizontalAlignment="Left" Height="300" Margin="10,52,0,0" VerticalAlignment="Top" Width="300">
            <local:BoardControl/>
        </Viewbox>
    </Grid>
</Window>
